Algoritmo "proway cursos"
// Disciplina   : [Linguagem e Lógica de Programação]
// Professor   : Antonio Carlos Nicolodi
// Descrição   : oferta d cusos da proway
// Autor(a)    : Gabrielly Trigo
// Data atual  : 13/06/2021
Var
   // Seção de Declarações das variáveis
   resposta_curso_contratado : caractere
   indice: inteiro
   cursos : vetor [1..5] de caractere
   detalhes:vetor[1..5] de caractere
   resumo:vetor[1..5] de caractere
   LIMITE : inteiro
   cursos_contratados: caractere
Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   LIMITE <- 5
   //----------------------------------------------------------------------
procedimento inicializar_cursos()
var
inicio
   cursos [1] <- "Algoritimos 1"
   cursos [2]<- "Algoritimos 2"
   cursos [3] <- "Pyton - fundamentos"
   cursos [4] <- "Pyton - intermediario"
   cursos [5] <- "Pyton - avançado"
fimprocedimento

procedimento  inicializar_detalhes()
var
inicio
   detalhes[1] <- "variaveis,fluxogramas e exercicios"
   detalhes [2]<- "vetore, procedimentos, funçoes e banco de dados"
   detalhes [3] <- "o básico da linguagem variaveis, exercicios "
   detalhes [4] <- "funções e mini projetos"
   detalhes [5] <- "sou foda em programação me contrata"
fimprocedimento


procedimento inicializar_resumo()
var
inicio
   resumo [1] <- "vc vai aprender a programar, vc nao sabe ainda..."
   resumo [2]<- "ja sei programar um pouco agora falta uma linguagem de mercado"
   resumo [3] <- "o básico dnv? so que agora em uma linguagem de mercado "
   resumo [4] <- "fazendo projetos no dia a dia "
   resumo [5] <- "mega projeto com foco em um emprego "
fimprocedimento
//listar cursos
//-------------------------------------------------------------------
procedimento listar_cursos()
var
   contador:inteiro

inicio
   inicializar_cursos()
   inicializar_detalhes()
   inicializar_resumo()
   para contador de 1 ate  LIMITE  faça
      escreval(contador ," - curso", cursos[contador])
   fimpara
fimprocedimento

//----------------------------------------------------------------------
//selecionar um curso - exibir os detalhes - exibir uma revisão
funcao curso_selecionado(indice : inteiro) : caractere
var
inicio
   escreval("-----------",cursos[indice],"-------")
   escreval("detalhes do curso")
   escreval(detalhes[indice])
   escreval("resumo do curso")
   escreval(resumo[indice])
   escreval("--------------------------------------------------------")

   retorne contratar_curso(indice)
fimfunção
//opção de contratar esse curso

//------------------------------------------------------------------------
funcao contratar_curso(indice:inteiro) : caractere
var
   resposta : caractere
inicio
   escreval("Deseja contratar o curso", cursos[indice]," ? (S/N)")
   leia(resposta)
   se (resposta ="s") ou (resposta="S") ou (resposta ="sim") então
      cursos_contratados <- cursos_contratados +" , "+cursos[indice]
      retorne "Contratou o curso"
   senao
      retorne "Não contratou o curso"
   fimse
fimfuncao
//------------------------------------------------------------------------
procedimento looping_apresentacao()
var
inicio
   limpatela
   ESCREVAL("Bem vindo ao catalogo de cursos da proway")
   listar_cursos()

   escreval ("escolha -1 para encerrar o programa")
   escreval ("no momento vc ja tem os cursos")
   escreval(cursos_contratados)
   escreval ("Conforme a lista de cursos, escolha um")
   leia(indice)
   se (indice <1) ou (indice>LIMITE) entao
      escreval("escolha um indice valido")

   senao
      resposta_curso_contratado <- curso_selecionado(indice)
      escreval(resposta_curso_contratado)
   fimse

fimprocedimento





//------------------------- INICIO DE VERDADE ------------------------------

repita
   looping_apresentacao()
ate(indice=-1)

















Fimalgoritmo